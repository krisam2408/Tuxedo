<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tuxedo</title>

    @foreach(string style in AppSettings.Instance.Styles)
    {
        @Html.Raw(style)
    }

    <link href="~/css/app.min.css" rel="stylesheet" />

    @await RenderSectionAsync("styles", false)

</head>
<body class="dark bd-3">
    <partial name="_Header" />

    @RenderBody()

    <partial name="_Footer" />

    @await RenderSectionAsync("modals", false)

    @foreach (string script in AppSettings.Instance.Scripts)
    {
        @Html.Raw(script)
    }

    <script>
        tuxApp.onReady(() => {
            console.log('tuxedo loaded');
        });
    </script>

    @await RenderSectionAsync("scripts", false)

    <script>
        tuxApp.ready();
    </script>

</body>
</html>